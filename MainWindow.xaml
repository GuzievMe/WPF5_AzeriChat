
<Window x:Class="SimpleChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Chat App" Height="450" Width="820" MinWidth=" 820">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" *"/>
            <ColumnDefinition Width=" 2*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column=" 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row=" 0" Name="txtBox" LostKeyboardFocus="txtBox_LostKeyboardFocus" GotKeyboardFocus="txtBox_GotKeyboardFocus" />

            <ScrollViewer Grid.Row=" 1" HorizontalScrollBarVisibility="Auto" >

                <StackPanel Name="humans" Background="Aquamarine" >


                   
                    
                        <Border BorderThickness=" 2" Background ="Red" Margin=" 3">
                            <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://img.freepik.com/free-photo/indoor-shot-beautiful-happy-african-american-woman-smiling-cheerfully-keeping-her-arms-folded-relaxing-indoors-after-morning-lectures-university_273609-1270.jpg"/>
                                <Button  Click="Button_Click"  Content ="Loris"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                            </StackPanel>
                        </Border>

                    <Border BorderThickness=" 2" Background ="Red"  Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://i.pinimg.com/originals/78/c4/e4/78c4e45d84518b01841a2c567a06819a.jpg"/>
                            <Button  Click="Button_Click"  Content ="Jonathan"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                        </StackPanel>
                    </Border>
                    <Border BorderThickness=" 2" Background ="Red" Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://www.psychnewsdaily.com/wp-content/uploads/2022/07/944-angel-number-meaning-beautiful-angel-in-a-starry-sky-1.jpg" />
                            <Button  Click="Button_Click"  Content ="Angel"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                        </StackPanel>
                    </Border>
                    <Border BorderThickness=" 2" Background ="Red" Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://img.freepik.com/free-photo/indoor-shot-beautiful-happy-african-american-woman-smiling-cheerfully-keeping-her-arms-folded-relaxing-indoors-after-morning-lectures-university_273609-1270.jpg"/>
                            <Button  Click="Button_Click"  Content ="Lamia"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                        </StackPanel>
                    </Border>
                    <Border BorderThickness=" 2" Background ="Red" Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://imgresizer.eurosport.com/unsafe/1200x0/filters:format(jpeg):focal(1366x442:1368x440)/origin-imgresizer.eurosport.com/2022/09/17/3455217-70489508-2560-1440.jpg"/>
                            <Button  Click="Button_Click"  Content ="Grelish"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                        </StackPanel>
                    </Border>
                    <Border BorderThickness=" 2" Background ="Red" Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://img.freepik.com/free-photo/indoor-shot-beautiful-happy-african-american-woman-smiling-cheerfully-keeping-her-arms-folded-relaxing-indoors-after-morning-lectures-university_273609-1270.jpg"/>
                            <Button  Click="Button_Click"  Content ="Akuba"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                        </StackPanel>
                    </Border>
                    <Border BorderThickness=" 2" Background ="Red" Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://cdn.kayiprihtim.com/wp-content/uploads/2020/11/Julius-Caesar-Hayati-Sozleri-Kimdir.jpeg"/>
                            <Button  Click="Button_Click"  Content ="Sezar"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                        </StackPanel>
                    </Border>
                    <Border BorderThickness=" 2" Background ="Red" Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://i.ytimg.com/vi/rDvypFt1_7I/hqdefault.jpg"/>
                            <Button  Click="Button_Click"  Content ="Qabil Turkoglu )"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                        </StackPanel>
                    </Border>
                    <Border BorderThickness=" 2" Background ="Red" Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://img.freepik.com/free-photo/indoor-shot-beautiful-happy-african-american-woman-smiling-cheerfully-keeping-her-arms-folded-relaxing-indoors-after-morning-lectures-university_273609-1270.jpg"/>
                            <Button  Click="Button_Click"  Content ="Nacov"  Margin="5" HorizontalAlignment="Left" Width="100" FontSize="20" />
                        </StackPanel>
                    </Border>
                    <Border BorderThickness=" 2" Background ="Red" Margin=" 3" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Width=" 40" HorizontalAlignment="Left"  Height=" 40" Source="https://img.freepik.com/free-photo/indoor-shot-beautiful-happy-african-american-woman-smiling-cheerfully-keeping-her-arms-folded-relaxing-indoors-after-morning-lectures-university_273609-1270.jpg"/>
