                        </StackPanel>
                    </Border>


                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        
        <!--===================================
        --><!--Sag (Yazishma) terefi--><!--
        ===================================-->
        
        <Grid Grid.Column=" 1">
            <Grid.RowDefinitions >
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="10">
                <StackPanel>
                    <TextBlock  x:Name="Contact" Background="Blue" Width="500" Foreground="White" FontSize=" 25" HorizontalAlignment="Center"  DockPanel.Dock="Left" MinHeight="30" Margin="0,0,10,0" Text="Contact"/>
                    <Border Width="200" CornerRadius=" 20" Background="Wheat"  Margin=" 5">
                        <Label  Name="Date"  Foreground="DarkRed"   Content=" Yesterday" HorizontalAlignment="Center" />
                    </Border>
                    </StackPanel>

            </DockPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Right" >
                <StackPanel x:Name="ChatStackPanel" Margin="10" Width="500" />
               
            </ScrollViewer>
            <DockPanel Grid.Row="2" Margin="10">
                <Image Width=" 30" Height=" 30" Margin="3" Source="https://ih1.redbubble.net/image.1389840840.2329/flat,750x,075,f-pad,750x1000,f8f8f8.jpg"  />
                <TextBox x:Name="MessageTextBox"  DockPanel.Dock="Left" Width="300" MinHeight="30" Margin="0,0,10,0"/>
                <Image  Width=" 30" Height=" 30" Margin="3" Source="https://banner2.cleanpng.com/20180407/yzw/kisspng-emoji-paper-clip-mastodon-sms-paperclip-5ac8dd8740e542.3578784015231133512658.jpg" />
                <Image  Width=" 30" Height=" 30" Margin="3" Source="https://images.emojiterra.com/google/android-10/512px/1f399.png"/>
                <Button  Click="SendButton_Click" MinHeight="30">
                    <Image Width=" 30" Height=" 30" Margin=" 4" Source=" https://www.seekpng.com/png/detail/51-512819_png-file-svg-whatsapp-send-icon-png.png" />
                </Button>
            </DockPanel>
        </Grid>
        
    </Grid>
</Window>

